
# 3. Eigenvalues and Eigenvectors
print("\n=== EIGENVALUES & EIGENVECTORS ===")
"""
Eigenvectors: Directions that don't change when transformation is applied
Eigenvalues: How much the eigenvector is stretched/shrunk

Think: When you stretch a rubber sheet, some directions stretch more than others
"""
C = np.array([[4, 2], [1, 3]])
eigenvalues, eigenvectors = np.linalg.eig(C)

print(f"Matrix C:\n{C}")
print(f"\nEigenvalues: {eigenvalues}")
print(f"Eigenvectors (columns):\n{eigenvectors}")

# Verify: C * v = 位 * v
for i in range(len(eigenvalues)):
    v = eigenvectors[:, i]
    位 = eigenvalues[i]
    left_side = C @ v
    right_side = 位 * v
    print(f"\nFor eigenvector {i}:")
    print(f"C @ v = {left_side}")
    print(f"位 * v = {right_side}")
    print(f"Are they equal? {np.allclose(left_side, right_side)}")
